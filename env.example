# TTS Configuration
# Copy this file to .env and modify as needed

# TTS Engine: pyttsx3 (offline) or gtts (online)
TTS_ENGINE=gtts

# Language code for TTS
TTS_LANGUAGE=en

# Default output format: file or bytesio
DEFAULT_OUTPUT_FORMAT=file

# Default audio directory
AUDIO_DIRECTORY=audio

# Default filename prefix
FILENAME_PREFIX=tts_output

# Audio quality settings
AUDIO_RATE=150
AUDIO_VOLUME=0.9

# Enable audio playback by default
AUTO_PLAY=false
